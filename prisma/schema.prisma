datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     UserRole @default(CUSTOMER)
  events   Event[]  @relation("EventToUser")
}

model Event {
  id           Int      @id @default(autoincrement())
  image        String?
  title        String
  description  String
  date         DateTime
  price        Float
  participants Int      @default(0)
  users        User[]   @relation("EventToUser")
}

enum UserRole {
  ADMIN
  MANAGER
  CUSTOMER
}
